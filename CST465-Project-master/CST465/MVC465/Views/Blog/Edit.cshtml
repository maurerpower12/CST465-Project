@model BlogPostModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Blog Post";
}
<h1>Edit Blog Posts</h1>
<style>
    #uxSubmit {
        background-color: #3A8DEB;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        width: 50%;
        display: inline-block;
        vertical-align: middle;
    }
</style>
@using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <button type="submit" id="uxSubmit">Submit</button>
}


